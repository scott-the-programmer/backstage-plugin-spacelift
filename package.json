{
  "name": "root",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "workspaces": {
    "packages": [
      "spacelift",
      "spacelift-backend"
    ]
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace @scott-the-programmer/backstage-plugin-spacelift start",
    "start-backend": "yarn workspace @scott-the-programmer/backstage-plugin-spacelift-backend start",
    "build": "backstage-cli repo build --all",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17"
  },
  "version": "1.12.0-next.1",
  "dependencies": {
    "@backstage/errors": "workspace:^",
    "@manypkg/get-packages": "^1.1.3"
  },
  "devDependencies": {
    "@backstage/cli": "workspace:*",
    "@backstage/codemods": "workspace:*",
    "@backstage/create-app": "workspace:*",
    "@backstage/repo-tools": "workspace:*",
    "@changesets/cli": "^2.14.0",
    "@octokit/rest": "^19.0.3",
    "@spotify/eslint-plugin": "^14.1.3",
    "@spotify/prettier-config": "^14.0.0",
    "@techdocs/cli": "workspace:*",
    "@types/node": "^16.11.26",
    "@types/webpack": "^5.28.0",
    "command-exists": "^1.2.9",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "fs-extra": "10.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "minimist": "^1.2.5",
    "node-gyp": "^9.1.0",
    "prettier": "^2.2.1",
    "semver": "^7.3.2",
    "shx": "^0.3.2",
    "ts-node": "^10.4.0",
    "typescript": "~4.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.md": [
      "node ./scripts/check-docs-quality"
    ],
    "./yarn.lock": [
      "node ./scripts/verify-lockfile-duplicates --fix"
    ],
    "*/yarn.lock": [
      "node ./scripts/verify-lockfile-duplicates --fix"
    ]
  },
  "packageManager": "yarn@3.2.3"
}
